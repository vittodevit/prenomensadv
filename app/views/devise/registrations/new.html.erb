<div class="form-signin w-100 m-auto mt-5">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="mb-5"></div>
    <h1 class="h3 mb-3 fw-normal"><%= t("platform_register") %></h1>

    <div class="form-floating mb-2">
      <%= f.text_field :name, autofocus: true, class: "form-control", required: true %>
      <%= f.label :name, class: "form-label" %>
    </div>

    <div class="form-floating mb-2">

      <%= f.text_field :surname, class: "form-control" %>
      <%= f.label :surname, class: "form-label", required: true %>
    </div>

    <div class="form-floating mb-2">
      <%= f.email_field :email, required: true, autocomplete: "email", class: "form-control"%>
      <%= f.label :email %>
    </div>

    <div class="form-floating mb-2">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
      <%= f.label :password, "Password (" + (@minimum_password_length ? @minimum_password_length.to_s + t("min_char") + ")": "") %>
    </div>

    <div class="form-floating mb-2">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true%>
      <%= f.label :password_confirmation %>
    </div>

    <%= recaptcha_v3(action: 'signup') %>

    <div class="actions mb-3">
      <%= f.submit t("sign_up"), class: "btn btn-primary w-100 py-2" %>
    </div>

    <%= render "devise/shared/error_messages", resource: resource %>
    <% flash.each do |key, value| %>
      <div class="alert alert-danger">
        <i class="bi bi-exclamation-octagon-fill"></i>
        <%= value %>
      </div>
    <% end %>

    <div class="mb-4"></div>

    <%= render "devise/shared/links" %>
  <% end %>


</div>
