<div class="form-signin w-100 m-auto mt-5">

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

    <div class="mb-5"></div>
    <h1 class="h3 mb-3 fw-normal"><%= t("reset_password") %></h1>

    <div class="form-floating ">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "form-control" %>
      <%= f.label :email %><br/>
    </div>

    <div class="actions mb-4">
      <%= f.submit t("reset_password"), class: "btn btn-primary w-100 py-2" %>
    </div>

    <%= render "devise/shared/error_messages", resource: resource %>

    <%= render "devise/shared/links" %>
  <% end %>
</div>
