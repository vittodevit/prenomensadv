<div class="form-signin w-100 m-auto mt-5">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="mb-5"></div>
  <h1 class="h3 mb-3 fw-normal"><%= t("platform_login") %></h1>

  <div class="form-floating mb-1">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    <%= f.label :email %>
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: "true" %>
    <%= f.label :password %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check text-start mb-3">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, t("remember_me"), class: "form-check-label" %>
    </div>
  <% end %>

  <div class="actions mb-4">
    <%= f.submit t("login"), class: "btn btn-primary w-100 py-2" %>
  </div>

  <% flash.each do |key, value| %>
    <div class="alert alert-danger">
      <i class="bi bi-exclamation-octagon-fill"></i>
      <%= value %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
<% end %>
</div>


